{
    "name": "phlib/sms-length",
    "description": "SMS Length calculations, using GSM 03.38 and GSM 03.40",
    "keywords": ["sms", "gsm", "message", "length", "size"],
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Chris Minett",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-mbstring" : "*"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\SmsLength\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symplify/easy-coding-standard": "^12"
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\SmsLength\\": "tests/"
        }
    }
}
